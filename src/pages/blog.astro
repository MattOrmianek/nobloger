---
import TagFlow from "../components/Blog/TagFlow.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const posts = await Astro.glob("./posts/*.md");
const pageTitle = "Noblog Blog";
const tags: string[] = [];
---

<BaseLayout pageTitle={pageTitle}>
  <TagFlow tags={tags} />
  {posts.map((post) => <Blog />)}
</BaseLayout>
